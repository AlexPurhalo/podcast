<!DOCTYPE html>
<html>
<head>
  <title>PodcastFm</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <link href='https://fonts.googleapis.com/css?family=Roboto:400,400italic,700,700italic' rel='stylesheet' type='text/css'></head>
<body>

<% if notice %>
    <p class="notice">
      <%= notice %>
    </p>
<% elsif alert %>
    <p class="alert">
      <%= alert %>
    </p>
<% end %>
<%= yield %>

</body>
</html>
